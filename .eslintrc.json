{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "prettier"],
  "rules": {},
  "overrides": [
    {
      "files": ["**/*.js"]
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "REACT_ENV": true
  }
}
